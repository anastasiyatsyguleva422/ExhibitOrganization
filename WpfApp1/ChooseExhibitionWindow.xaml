<Window x:Class="WpfApp1.ChooseExhibitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор выставки" Height="200" Width="400" Background="#d9c4bd">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите выставку:" Margin="0,0,0,10" FontSize="16"/>
        <ComboBox x:Name="ExhibitionsComboBox" Margin="0,0,0,20" />
        <Button Content="Подтвердить" Click="ConfirmButton_Click" Background="#7ba77b" Foreground="White" Height="30" />
    </StackPanel>
</Window>
