<Page x:Class="WpfApp1.DealtelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница деятеля" Background="#d9c4bd">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Панель деятеля"
             FontSize="28"
             FontWeight="Bold"
             Foreground="Black"
             Margin="20"
             HorizontalAlignment="Center"/>

            <Button Content="Регистрация на выставку"
                    Width="250" Height="30" Margin="0,10,0,0"
                    Click="RegisterToExhibition_Click" Background="#ba7b85"/>

            <Button Content="Представить экспонаты"
                    Width="250" Height="30" Margin="0,10,0,0"
                    Click="AddExhibit_Click" Background="#ba7b85"/>

            <Button Content="Просмотр доступных выставок"
                    Width="250" Height="30" Margin="0,10,0,0"
                    Click="ViewExhibitions_Click" Background="#ba7b85"/>
            <Button Content="Мои приглашения"
                    Width="250" Height="30" Margin="0,10,0,0"
                    Click="MyInvites_Click" Background="#ba7b85"/>

            <Button Content="Назад на главную"
                    Width="200" Height="30" Margin="0,10,0,0"
                    Click="BackToMain_Click" Background="#911e42"/>
        </StackPanel>
    </Grid>
</Page>
