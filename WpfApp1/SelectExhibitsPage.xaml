<Page x:Class="WpfApp1.SelectExhibitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WpfApp1" 
      Title="Отбор экспонатов"
      Background="#d9c4bd">

    <Page.Resources>
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Отбор экспонатов"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="20"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="30"
                Margin="40">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Opacity="0.2"
                                  BlurRadius="10"
                                  ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel Margin="10" VerticalAlignment="Center">

                <TextBlock Text="Выберите экспонаты для выставки" Margin="0,0,0,15"/>

                <ListView x:Name="ExhibitsListView"
          SelectionMode="Multiple"
          Margin="0,10,0,15">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название"
                            DisplayMemberBinding="{Binding Название}" />
                            <GridViewColumn Header="Тип"
                            DisplayMemberBinding="{Binding Тип_экспоната}" />
                            <GridViewColumn Header="Год создания"
                            DisplayMemberBinding="{Binding Год_создания}" />
                            <GridViewColumn Header="Статус"
                            DisplayMemberBinding="{Binding Статус}" />
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button Content="Отобрать"
                    Width="200" Height="45"
                    FontSize="16"
                    Click="SelectButton_Click"
                    Background="#7ba77b"
                    Foreground="White"
                    Padding="10,5"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="10,0"
                    BorderBrush="Transparent"/>

            <Button Content="Назад"
                    Width="200" Height="45"
                    FontSize="16"
                    Click="BackButton_Click"
                    Background="#911e42"
                    Foreground="White"
                    Padding="10,5"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="10,0"
                    BorderBrush="Transparent"/>
        </StackPanel>
    </Grid>
</Page>
