<Page x:Class="WpfApp1.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Админ-панель"
      Background="#d9c4bd">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Административная панель"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="20"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="30"
                Margin="60"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Opacity="0.2"
                                  BlurRadius="10"
                                  ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="300">

                <Button Content="Просмотр пользователей"
                        Height="45"
                        FontSize="16"
                        Background="#7ba77b"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="ViewUsers_Click"/>

                <Button Content="Просмотр выставок"
                        Height="45"
                        FontSize="16"
                        Background="#ba7b85"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="ViewExhibitions_Click"/>

                <Button Content="Просмотр отзывов"
                        Height="45"
                        FontSize="16"
                        Background="#ba7b85"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="ViewReviews_Click"/>

                <Button Content="Просмотр деятелей"
                        Height="45"
                        FontSize="16"
                        Background="#ba7b85"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="ViewArtistsButton_Click"/>

                <Button Content="Назад на главную"
                        Height="45"
                        FontSize="16"
                        Background="#911e42"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Click="BackToMain_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>