<Page x:Class="WpfApp1.VisitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель посетителя" 
      Background="#d9c4bd" Height="450" Width="800">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Панель посетителя" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Просмотр выставок" Width="200" Height="30" Click="Button_Click"/>
            <Button Content="Мои билеты" Width="200" Height="30" Margin="0,10"/>
            <Button Content="Оставить отзыв" Width="200" Height="30"/>
        </StackPanel>
    </Grid>
</Page>