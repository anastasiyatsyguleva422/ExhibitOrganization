<Page x:Class="WpfApp1.OrganizerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель организатора"
      Background="#d9c4bd">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Панель организатора"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="20"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="30"
                Margin="60"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Opacity="0.2"
                                  BlurRadius="10"
                                  ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="300">

                <Button Content="Создать выставку"
                        Height="45"
                        FontSize="16"
                        Background="#7ba77b"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="CreateExhibitionButton_Click"/>

                <Button Content="Внесение изменений в выставки"
                        Height="45"
                        FontSize="16"
                        Background="#ba7b85"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="ManageExhibitions_Click"/>

                <Button Content="Приглашение участников выставки"
                        Height="45"
                        FontSize="16"
                        Background="#ba7b85"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="InviteParticipant_Click"/>
                <Button Content="Отбор экспонатов"
         Height="45"
         FontSize="16"
         Background="#ba7b85"
         Foreground="White"
         FontWeight="SemiBold"
         BorderThickness="0"
         Cursor="Hand"
         Margin="0,0,0,15"
        Click="SelectExhibits_Click"/>


                <Button Content="Назад на главную"
                        Height="45"
                        FontSize="16"
                        Background="#911e42"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Click="BackToMain_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
